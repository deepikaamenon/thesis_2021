journal = {Journal of Biomechanics},
keywords = {Actin stress fibers,Cell biomechanics,Force transmission,Mechanical properties,Prestress},
mendeley-tags = {Actin stress fibers,Cell biomechanics,Force transmission,Mechanical properties,Prestress},
month = {oct},
