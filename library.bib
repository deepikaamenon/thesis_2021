mendeley-tags = {BAR proteins,Folder - bar proteins,actin,clathrin-mediated endocytosis,instability,membrane tension},
month = {mar},
number = {12},
pages = {E1423--E1432},
title = {{Endocytic proteins drive vesicle growth via instability in high membrane tension environment}},
url = {http://www.pnas.org/content/112/12/E1423 http://www.ncbi.nlm.nih.gov/pubmed/25775509 http://www.pnas.org/content/112/12/E1423.abstract http://www.pnas.org/content/112/12/E1423.full.pdf},
