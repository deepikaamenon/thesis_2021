language = {eng},
mendeley-tags = {Amino Acid Motifs,Binding Sites,Folder - review,Ligands,Molecular Mimicry,Proline,Protein Binding,Protein Structure- Tertiary,Tryptophan,signal transduction,src Homology Domains},
